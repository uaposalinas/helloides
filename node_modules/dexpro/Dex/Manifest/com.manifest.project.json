{

    "manifest_version": 3,
    "devlabs_schema": "DataTree",
    "schema_version": "x-www-delta9815",

    "ProductInfo": {

        "ProductName": "",
        "ProjectIcon": "",
        "ProductPackageName": "",
        "Version": "",
        "VendorVersion": "",
        "Developer": "",
        "License": "", 
        "SupportEmail": "",
        "Website": ""

    },

    "Api": {

        "ProjectToken": "",
        "AuthUserName": "",
        "AuthPass": "",
        "DevLabs-DNS": "31.22.4.13",
        "Requested-APIS": {},

        "ApiCodes": {

            "Success": 200,
            "Error": 400,
            "Unauthorized": 401

        },

        "RateLimit": {

            "RequestsPerMinute": 60,
            "BurstLimit": 100

        },

        "SupportedMethods": ["GET", "POST", "PUT", "DELETE"],
        "Scopes": ["read", "write", "admin"]

    },

    "Compatibility": {

        "Phones": true,
        "Tablets": true,
        "Desktop": true,
        "Carplays": true,
        "Touch": true,
        "Offine": false,
        "OperatingSystems": ["Windows", "MacOS", "Linux", "iOS", "Android"],
        "SupportedBrowsers": ["Chrome", "Firefox", "Safari", "Edge"]

    },

    "com.netinfo": {

        "DefaultProtocol": "https:",
        "EndPoint": "",
        "DomainName": "",
        "HostName": "",
        "IndexPath": "/",
        "IndexName": "default",
        "Allow-Origins": false,
        "Allowed-Origins": "*",
        "Cross-Resources": "true",
        "HeadersConfig": "Application/x-www-form-urlencoded, Application/x-tokens-devlabscors-autoencode",

        "SecurityPolicy": {

            "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; object-src 'none'",
            "StrictTransportSecurity": "max-age=31536000; includeSubDomains",
            "XFrameOptions": "DENY"

        }

    },

    "Paths": {

        "Resources": {

            "Images": "/assets/images",
            "Css": "/assets/css",
            "Scss": "/assets/scss",
            "Php": "/server/php",
            "Js": "/assets/js",
            "Vendor": "/vendor",
            "Libs": "/libs"

        },

        "Identifers": {

            "Manifest": "/manifest.json",
            "Meta-INF": "/meta",
            "DevLabsCors": "/cors"

        },

        "Auths": {

            "Login": "/auth/login",
            "Signup": "/auth/signup",
            "Logout": "/auth/logout"

        },

        "Controllers": {

            "HomeController": "/controllers/home.php",
            "UserController": "/controllers/user.php"

        }

    },

    "Alternatives": {
        
        "OfflinePath": "/offline.html",

        "HTTPErrorPath": {

            "400": "/errors/400.html",
            "401": "/errors/401.html",
            "403": "/errors/403.html",
            "404": "/errors/404.html",
            "500": "/errors/500.html"

        },

        "Redirects": {

            "Allowed": true,
            "Rules": {

                "/old-route": "/new-route",
                "/deprecated": "/current"

            }
        }
    },

    "Logging": {

        "LogLevel": "debug", 
        "LogFile": "/logs/app.log",
        "ErrorLogFile": "/logs/errors.log",
        "EnableConsoleLogs": true
        
    },

    "DatabaseConfig": {

        "Type": "MySQL",
        "Host": "localhost",
        "Port": 3306,
        "User": "root",
        "Password": "",
        "DatabaseName": "example_db",
        "MaxConnections": 100,
        "ConnectionTimeout": 30

    },

    "Localization": {

        "DefaultLanguage": "es",
        "SupportedLanguages": ["es", "en", "fr"],
        "LanguagePath": "/assets/lang"

    },

    "Authentication": {

        "Type": "HelloID",
        "TokenExpiration": 3600,
        "RefreshTokenExpiration": 86400,
        "Issuer": "https://auth.devlabsco.space/",
        "Audience": "logins",
        "Scopes": ["read", "write", "delete"]

    },

    "Notifications": {

        "Email": {

            "SMTPServer": "smtp.example.com",
            "Port": 587,
            "User": "user@example.com",
            "Password": "",
            "From": "no-reply@example.com"

        },

        "Push": {

            "FCMKey": "AIzaSyD...abcd"

        }

    },

    "Monitoring": {

        "Enabled": true,
        "MetricsEndpoint": "/metrics",
        "HealthCheckEndpoint": "/health",
        "LogErrorsTo": "/logs/errors.log"

    },

    "Caching": {

        "Enabled": true,
        "Type": "Redis",
        "Host": "127.0.0.1",
        "Port": 6379,
        "ExpirationTime": 3600

    },

    "DataManagement": {

        "Pagination": {

            "DefaultPageSize": 20,
            "MaxPageSize": 100

        },

        "Filtering": {

            "AllowedFields": ["name", "date", "status"],
            "DefaultSortField": "date",
            "DefaultSortOrder": "desc"

        }

    },

    "ApiVersioning": {

        "CurrentVersion": "v1",
        "DeprecatedVersions": ["v0.9"],
        "VersionHeaderName": "X-API-Version"

    },

    "Security": {

        "EnableHTTPS": true,
        "AllowedIPs": ["*"],
        "RateLimiting": {

            "MaxRequestsPerMinute": 100,
            "EnableBurst": true

        },

        "CorsPolicy": {

            "AllowedOrigins": ["*"],
            "AllowedHeaders": ["Content-Type", "Authorization"],
            "AllowedMethods": ["GET", "POST", "PUT", "DELETE"]

        }

    },

    "UserLogs": {

        "Enabled": true,
        "LogActions": ["login", "logout", "data_update", "data_delete"],
        "LogFilePath": "/logs/user_actions.log"

    },

    "Testing": {

        "MockData": true,
        "Endpoints": {

            "MockApiUrl": "https://mockapi.example.com",
            "TestAuthToken": "mockedToken123"

        }

    },

    "FeatureFlags": {

        "EnableBetaFeatures": false,

        "Features": {

            "NewDashboard": true,
            "ExperimentalApi": false

        }

    }

}
